{
  "files.associations": {
    ".xtm": "xml",
    ".ngI18nconfig": "json"
  },
  "eslint.validate": ["javascript", "typescript", "html"],
  "eslint.options": {
    "extensions": [".js", ".ts", ".html"],
    "overrideConfigFile": "./.config/.eslintrc"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "prettier.configPath": "./.config/.prettierrc.js",
  "karmaTestExplorer": {
    "enableExtension": true,
    "karmaConfFilePath": "./karma.conf.js",
    "projectWorkspaces": ["packages/client"],
    "testFiles": ["packages/client/src/**/*.spec.ts"]
  },
  "stylelint.enable": true,
  "scss.validate": false,
  "css.validate": false,
  "less.validate": false,
  "stylelint.validate": ["scss"],
  "explorer.compactFolders": false,
  "search.exclude": {
    ".git": true,
    "node_modules": true
  },
  "monoWorkspace.folders.custom": [{ "regex": "cypress", "prefix": "ðŸ”¥" }],
  /* ======================== */
  /* ==== Material icons ==== */
  /* ======================== */
  "material-icon-theme.files.associations": {
    "*.page.ts": "angular-resolver",
    "tsconfig.doc.json": "tsconfig",
    "*.webpack.ts": "webpack",
    ".ngI18nconfig": "I18n",
    ".env.insiders": "Tune"
  },
  "material-icon-theme.folders.associations": {
    ".config": "config",
    "ui": "context"
  },
  /* ====================== */
  /* ==== Hidden files ==== */
  /* ====================== */
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    ".stylelintrc.json": false,
    ".browserslistrc": false,
    ".editorconfig": false,
    ".eslintrc.json": false,
    ".gitattributes": false,
    ".gitignore": false,
    ".ngI18nconfig": false,
    ".prettierrc.js": false,
    "cypress.json": false,
    "package-lock.json": false,
    "LICENSE.md": false,
    "tailwind.config.js": false,
    "tsconfig.app.json": false,
    "tsconfig.doc.json": false,
    "tsconfig.json": false,
    "tsconfig.spec.json": false,
    "yarn.lock": false,
    "karma.conf.js": false,
    "documentation": false,
    ".github": false,
    ".angular": false,
    "node_modules": false,
    "proxy.conf.json": false,
    "coverage": false
  },
  "explorerExclude.backup": {},
  /* ================== */
  /* ==== Spelling ==== */
  /* ================== */
  "cSpell.words": [
    "auditlog",
    "compodoc",
    "devkit",
    "Donte",
    "Dskip",
    "Embeddable",
    "fileoverview",
    "jsdevtools",
    "lcov",
    "ngneat",
    "nrwl",
    "nxrocks",
    "postbuild",
    "proto",
    "protobuf",
    "protoc",
    "recaptcha",
    "storysource",
    "tabuckner",
    "tailwindcss",
    "Vernite",
    "Xmark"
  ],
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "eslint.packageManager": "yarn"
}
