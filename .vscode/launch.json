{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Development server",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Unit tests (chrome)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "address": "localhost",
      "timeout": 600000,
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/_karma_webpack_": "${workspaceFolder}"
      },
      "restart": true,
      "sourceMaps": true,
      "preLaunchTask": "npm: unit:serve:chrome"
    },
    {
      "name": "Unit tests (firefox)",
      "type": "firefox",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: unit:serve:firefox"
    },
    {
      "name": "Documentation server",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: docs:serve"
    },
    {
      "type": "java",
      "name": "Launch java server",
      "request": "launch",
      "mainClass": "dev.vernite.vernite.VerniteApplication",
      "projectName": "vernite",
      "cwd": "${workspaceFolder}/packages/server"
    }
  ]
}