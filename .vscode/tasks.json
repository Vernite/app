{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "nx:client:serve",
      "command": "yarn",
      "args": ["nx", "serve:insiders", "client"],
      "type": "shell",
      "hide": true,
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceRoot}/src"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled |Failed to compile."
          }
        }
      }
    },
    {
      "label": "buildServer",
      "command": "yarn",
      "args": ["nx", "build", "server"],
      "type": "shell",
      "hide": true
    }
  ]
}
